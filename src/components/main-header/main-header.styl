.mainHeader
	background-color #f3f9ff
	font 700 16px mainFont
	height 130px
	padding-top 35px
	padding-bottom 40px
	&__img
		height 55px
	&__nav
		width 100%
		display flex
		justify-content space-between
		align-items center
	&__list
		display flex
		text-transform uppercase
		li
			color gray
			padding-right 16px
			&:hover
				color #151e29
		li:last-child
			padding-right 0
	&__button
		position relative
		&_signIn
			margin-left 8px
		
@media screen and (max-width: 1240px)
	.mainHeader
		font-size 11px
		&__nav
			justify-content space-around
		&__list
			li:first-child
				display none
		.button
			width 105px
			height 31px
			font-size 12px
			&_signIn
				width 81px
				height 31px
				margin-left 5px

@media screen and (max-width: 768px)
	.mainHeader
		padding-top 27px
		padding-bottom 27px
		&__nav
			display none
		&__logo
			width 100%
			text-align center
		.mainHeader__button_join
			display none