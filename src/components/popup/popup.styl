.popup
	position fixed
	justify-content center
	align-items center
	z-index 999
	width w = 100vw
	height h = 100vh
	&_background
		background-color rgba(0,0,0,0.6)
		width 100%
		height 100%
		position fixed
		top 0
		left 0
		z-index -1
	h3, h2
		text-align center
	h3
		margin-top 25px
	h2
		font-size 30px
	&__wrap
		position fixed
		width 1200px
		height 415px
		padding 20px
		top (h/4)
		background-color #f7faff
		box-shadow 0 0 87px rgba(0, 0, 0, 0.15)
	&__payment
		position relative
		background-color #fff
	&__exit
		position absolute
		top -15px
		right -5px
		width 30px
		height 30px
		font-size 30px
		line-height 30px
		cursor pointer
	&__card,
	&__paypal,
	&__crypto	
		display flex
		flex-direction column
		align-items center
		img
			margin-top 35px
			margin-bottom 20px
			width 157px
			height 107px
	&__button
		margin-bottom 35px
	&__agreement
		text-align center
		font 400 14px mainFont
		color #56616f
		margin-top 20px
		margin-bottom 20px

@media screen and (max-width: 1200px)
	.popup
		&__wrap
			width 600px
		&__card,
		&__paypal,
		&__crypto
			img
				width 127px
				height 87px
	
@media screen and (max-width: 768px)
	.popup
		h2
			font-size 25px
		&__wrap
			width 315px
			height 600px
			top 10px
		&__card,
		&__paypal,
		&__crypto
			img
				margin-top 10px
		&__button
			margin-bottom 10px
		&__exit
			right 50%
			transform translateX(50%)
