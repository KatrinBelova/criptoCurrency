section.plan#plan
	.container
		.row.justify-content-center
			.col.col-md-6.col-xl-8
				h2.plan__caption Pick The Plan That Works Best For You, And Gain Instant Access!
		.row.justify-content-end
			.col-xl-6
				.plan__set
					p.plan__title One Signal Paid for entire monthly fee!
					.plan__package
						ul.plan__list
							li.plan__item Unlimited High-Probability Signals
								i.fas.fa-check
							li.plan__item 24/7 Access To Expert Trader Community
								i.fas.fa-check
							li.plan__item Request Custom Coin Reports
								i.fas.fa-check
							li.plan__item Access to ICO Channel Discussions
								i.fas.fa-check
							li.plan__item Get Answers To All Your Trading Questions
								i.fas.fa-check
							li.plan__item Expert Level Crypto Analysis 
								i.fas.fa-check

		.row
			.col-md-4
				.plan__prices.plan__prices_monthly
					p.plan__price $97 #[span / mo]
					h2 Pay Monthly
					p Cancel Any Time
					.button Join now!
			.col-md-4
				.plan__prices.plan__prices_yearly
					p.plan__price $697 #[span / yr]
					h2 Yearly
					p Save $450+
					.button Join now!
			.col-md-4
				.plan__prices.plan__prices_lifetime
					p.plan__price $1,497
					span one time charge
					h2 Lifetime Access 
					p Incredible Value!
					.button Join now!
