	.techAnalize
		&__title::after
			left 26%
		&__plan
			padding-bottom 268px
			margin-bottom 410px
		&__steps
			max-width 687px
			margin auto
			top 455px
		&__item
			&::before
				top -53px
				left 99px
			&::after
				width 287px
				height 321px
			p
				width 200px
		&__item:nth-child(1)
			width 288px
			height 263px
		&__item:nth-child(2)
			width 288px
			height 263px
		&__item:nth-child(3)
			width 288px
			height 263px
		&__item:nth-child(4)
			width 288px
