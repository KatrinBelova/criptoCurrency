// Diagonal background
.home__background
	position absolute
	top 130px
	left 0
	right 0
	width 100%
	height 1890px
	background-image linear-gradient(to right, #d0ebfc 0%, #e0d7c7 100%)
	clip-path polygon(0 100%, 0 0, 100% 0, 100% 50%)
	clip-path url("#clip-shape-home")
	z-index -99
	.inner-block
		position absolute
		top 0px
		left 0
		right 0
		width 100%
		height 950px
		background-color #e6f2ff
		opacity 0.5
		clip-path polygon(0 100%, 0 0, 100% 0)
		clip-path url("#clip-inner-shape-home")
		z-index -9
		
// Section home
.home
	padding-top 80px
	p
		text-transform uppercase
		color gray
	&__title
		h1
			padding-bottom 30px
	&__description
	&__caption
		span
			font-weight 700
	&__caption
		span
			color #2c3035
	&__description
		padding-top 70px
		padding-bottom 65px
		span
			color pink
	&__profit
		width 460px
		margin auto
		padding-top 40px
		font 700 25px mainFont
		text-align center
	&__player
		padding-bottom 130px
	&__video
		height 388px
		width 590px

.home__experts
	position relative
	width 100%
	&::after
		content ''
		position absolute
		top 30px
		right 0
		background url('../images/experts.png')
		background-size cover
		background-repeat no-repeat
		height 920px
		width 468px
	
.home__button
	padding-bottom 70px
			

@media screen and (max-width: 1200px)       
	.home
		&__description
			padding-top 300px
		&__player
			padding-bottom 42px
		&__profit
			max-width 460px
	.home__experts
		&::after
			width 271px
			height 533px
			top -100px
	.home__player
		text-align center

@media screen and (max-width: 768px)
	.home
		padding-top 40px
		&__title
			h1
				width 280px
				font-size 28px
				line-height 34px
		&__caption
			width 240px
			font-size 18px
			line-height 22px
		&__player
			padding-bottom 25px
		&__description
			padding-top 270px
			padding-bottom 40px
		&__profit
			max-width 340px
			font-size 20px
			line-height 26px
	.home__experts
		&::after
			width 180px
			height 353px
			top 65px
	.home__video
		height 220px
		width 340px
	.home__button
		padding-bottom 63px



