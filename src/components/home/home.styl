.home
	position relative
	margin-top 130px
	margin-bottom 70px
	padding-top 80px
	&__background
		position absolute
		top 0
		left 0
		right 0
		width 100%
		height 1890px
		background-image linear-gradient(to right, #d0ebfc 0%, #e0d7c7 100%)
		clip-path polygon(0 100%, 0 0, 100% 0, 100% 50%)
		clip-path url("#clip-shape-home")
		z-index -99
		.inner-block
			position absolute
			top 0px
			left 0
			right 0
			width 100%
			height 945px
			background-color #e6f2ff
			opacity 0.5
			clip-path polygon(0 100%, 0 0, 100% 0)
			clip-path url("#clip-inner-shape-home")
			z-index -9
	p
		text-transform uppercase
		color gray
	&__title
		h1
			padding-bottom 30px
	&__description
	&__caption
		span
			font-weight 700
	&__caption
		span
			color #2c3035
	&__description
		padding-top 70px
		padding-bottom 65px
		animation-delay 1.5s
		span
			color pink
	&__profit
		width 460px
		margin auto
		padding-top 40px
		font 700 25px mainFont
		text-align center
	&__player
		padding-bottom 130px
	&__video
		position relative
		height 338px
		width 596px
		border-radius 4px
		border 3px solid #6a79a8
		margin-bottom 50px
		animation-delay 1s
	&__control
		position absolute
		background url('../images/control.png')
		bottom 10px
		left 20px
		width 550px
		height 26px
		cursor pointer
	&__screen
		position absolute
		top -40px
		left 25px
		width 490px
		height 370px
		background url('../images/screen.png')
		background-size contain
		background-repeat no-repeat
		cursor pointer
		animation-delay 1.5s
	&__play
		position relative
		top 118px
		left 250px
		width 89px
		height 89px
		border-radius 50%
		box-shadow 0 0 59px rgba(255, 76, 124, 0.35)
		background-color #ff4c7c
		cursor pointer
		animation-delay 2s
	&__play_btn
		position absolute
		content ''
		top 18px
		left 31px
		width 36px
		height 55px
		background url('../images/play.png')
		background-size initial
		background-repeat no-repeat
		cursor pointer
		animation-delay 2.8s
		animation-duration 0.5s
	
	@keyframes toTop {
		from {top: 300px}
		to {top: 0}
	}

	.home__experts
		position relative
		width 100%
		&::after
			content ''
			position absolute
			top 0
			right 0
			background url('../images/experts.png')
			background-size cover
			background-repeat no-repeat
			height 920px
			width 468px
			animation toTop 0.5s linear 0s
			

@media screen and (max-width: 1200px)       
	.home
		&__background
			height 1770px
			clip-path polygon(0 100%, 0 0, 100% 0, 100% 80%)
			.inner-block
				height 585px
				clip-path polygon(0 100%, 0 0, 100% 0, 100% 30%)
		&__description
			padding-top 300px
		&__player
			padding-bottom 42px
		&__profit
			max-width 460px
		&__caption
			width 440px
		&__video
			margin auto
		&__player
			text-align center
		.home__experts
			&::after
				width 271px
				height 533px
				top -100px


@media screen and (max-width: 768px)
	.home
		margin-top 109px
		margin-bottom 63px
		padding-top 40px
		&__background
			height 1435px
			clip-path polygon(0 100%, 0 0, 100% 0, 100% 88%)
			.inner-block
				height 490px
				clip-path polygon(0 100%, 0 0, 100% 0, 100% 66%)
		&__title
			h1
				width 280px
				font-size 28px
				line-height 34px
		&__caption
			max-width 240px
			font-size 18px
			line-height 22px
		&__player
			padding-bottom 25px
		&__description
			padding-top 270px
			padding-bottom 40px
		&__profit
			max-width 340px
			font-size 20px
			line-height 26px
		&__video
			height 220px
			width 340px 
		&__screen
			position absolute
			top -23px
			left 10px
			width 310px
			height 370px
		&__background
			height 1760px
			clip-path polygon(0 100%, 0 0, 100% 0, 100% 70%)
			.inner-block
				height 490px
				clip-path polygon(0 100%, 0 0, 100% 0, 100% 60%)
		iframe
			width 335px
			height 214px
	.home__experts
		&::after
			width 180px
			height 353px
			top 65px

	